@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

    <div class=" container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-dark">
                    Category List
                </h2>
            </div>
            <div class="col-6 text-end">
                <h2>
                    <a asp-page="/Categories/Create" class="btn btnalert-primary text-dark pb-3">
                        <i class="bi bi-plus-circle"></i> Create New Category
                    </a>
                </h2>
            </div>
            
        </div>
    </div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Category Name
        </th>

        <th>
            Display Order
        </th>
        <th >
            Modify
        </th>
    </tr>
    <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>

            <td>@obj.DisplayOrder</td>

            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-page="/Categories/Edit"  asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                            <a asp-page="/Categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash"></i>  Delete
                    </a>
                </div>

            </td>
        </tr>
        }
    </tbody>
</table>


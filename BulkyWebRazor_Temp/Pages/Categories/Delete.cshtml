@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel


<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 action="text-light">Delete Category</h2>
            <hr />
        </div>

        @*<div asp-validation-summary="ModelOnly"></div>*@
        <div class="form-floating mb-3 row">
            <!--Manda ao Name diretamente graças ao model inserido em cima(asp-for)-->
            <label asp-for="Category.Name" disabled class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>

        <div class="form-floating mb-3 row">
            <!--Manda ao Name diretamente graças ao model inserido em cima (asp-for)-->
            <label asp-for="Category.DisplayOrder" disabled class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />
        </div>


        <button type="submit" class="btn btn-danger " style="width:150px">Delete</button>
        <a asp-page="/Categories/Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}